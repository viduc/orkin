{
    "name": "viduc/orkin",
    "description": "Orkin is a PHP library for creating and managing some quality tools.",
    "type": "library",
    "homepage": "https://viduc.github.com",
    "authors": [
        {
            "name": "Tristan Fleury",
            "email": "viduc@mail.fr",
            "homepage": "https://viduc.github.com",
            "role": "Developper - CrÃ©ateur"
        }
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.0",
        "phing/phing": "^2.17",
        "phpunit/phpunit": "^9",
        "kahlan/kahlan": "5.*",
        "kahlan/extra-matcher": "1.*",
        "kavinsky/clover-merge": "*",
        "friendsofphp/php-cs-fixer": "^3.14",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "minicli/minicli": "^3.2",
        "minicli/command-help": "^0.1.0"
    },
    "autoload": {
        "psr-4": { "Viduc\\Orkin\\": "command/" },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Viduc\\Orkin\\Tests\\": "tests/" }
    },
    "bin": ["bin/orkin"],
    "scripts": {
        "test": [
            "phpunit --coverage-clover clover.xml"
        ]
    }
}
